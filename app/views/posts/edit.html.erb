<div class="section">
	<div class="container">
		<div class="columns is-centered">
			<div class="column is-half">
					<%= simple_form_for(@post) do |f| %>
            <%= f.error_notification %>
            <div class="field">
              <div class="control">
                <%= f.input :body, 
                label: "Edit post", input_html: { class: "textarea" }, wrapper: false, 
                label_html: {class: "label"}, placeholder: "Compose new post here...", autofocus: true %>
              </div>
            </div>
            <%= f.button :submit, class: "button is-info" %>
            <%= link_to "Back", posts_path, class: "button is-info" %>
          <% end %>
			</div>
		</div>
	</div>
</div>

<nav class="navbar is-fixed-bottom">
	<div class="navbar-menu">
		<div class="navbar-item">
			<div class="field is-grouped">
				<p class="control">
					<%= link_to 'Cancel', posts_path, class: "button is-dark" %>
				</p>
		</div>
	</div>
</nav>