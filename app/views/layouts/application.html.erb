<!DOCTYPE html>
<html>
  <head>
    <title>MembersOnly</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'https://jenil.github.io/bulmaswatch/flatly/bulmaswatch.min.css' %>
    <%= stylesheet_link_tag 'https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css' %>
  </head>

  <body>

  <nav class="navbar is-primary">
    <div class="navbar-brand">
    <%= link_to root_path, class: "navbar-item" do %>
      <h1 class="title is-5">MembersOnly</h1>
    <% end %>
      <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="navbarExample">
        <span aria-hidden="true"></span>
        <span aria-hidden="true"></span>
        <span aria-hidden="true"></span>
      </a>
    </div>

    <div id="navbarExample" class="navbar-menu">
      <div class="navbar-end">
        <div class="navbar-item">
            <a class="navbar-item">
              <%= link_to 'New Post', new_post_path, class: "button is-info is-inverted" %>
            </a>
            <% if user_signed_in? %>
              <a class="navbar-item">
                <%= link_to current_user.name, edit_user_registration_path, class: "button is-info" %>
              </a>
              <a>
                <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "button is-info" %>
              </a>
            <% else %>

            <a class="navbar-item">
              <%= link_to "Sign In", new_user_session_path, class: "button is-info" %>
            </a>
            <a class="navbar-item">
              <%= link_to "Sign Up", new_user_registration_path, class: "button is-info" %>
            </a>
            <% end %>
        </div>
      </div>
    </div>
  </nav>
  <%= yield %>
  </body>
</html>
